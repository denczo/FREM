<Info>:
    BoxLayout:
        BoxLayout:
            size_hint: 0.1, 1.05
            padding: 20

            BoxLayout
                orientation: 'vertical'
                pos_hint: {"top":1}

                Button:
                    size_hint_y: None
                    height: self.width
                    text: "[b]X[/b]"
                    markup: True
                    on_release: root.popupWindow.dismiss()

                BoxLayout:
                    size_hint: 1, 1

                ToggleButton:
                    text: '[b]I[/b]'
                    group: 'help'
                    state: 'down'
                    markup: True
                    font_size: 0.75*self.height
                    height: self.width
                    size_hint_y: None
                    on_release: root.ids.scrollbox.scroll_to(root.ids.intro)

                ToggleButton:
                    text: '[b]II[/b]'
                    group: 'help'
                    markup: True
                    font_size: 0.75*self.height
                    height: self.width
                    size_hint_y: None
                    on_release: root.ids.scrollbox.scroll_to(root.ids.marker, padding=root.height, animate=True)

        ScrollView:
            id: scrollbox
            size_hint: 0.9, 1.05
            pos_hint: {"x":0, "top":1.05}
            do_scroll_x: False
            spacing:110
            bar_width: 6
            bar_color: 1, 1, 1, 1
            bar_inactive_color: 1, 1, 1, 0.5

            BoxLayout:
                size_hint: 1, None
                orientation: 'vertical'
                adaptive_height: True
                height: self.minimum_height

                BoxLayout:
                    id: intro

                Label:
                    id: infoText_p1
                    text: ""
                    markup: True
                    size_hint: 0.98, None
                    text_size: self.width, None
                    height: self.texture_size[1]

                Label:
                    id: infoText_p2
                    text: ""
                    markup: True
                    size_hint: 0.98, None
                    text_size: self.width, None
                    height: self.texture_size[1]

                AsyncImage:
                    id: gif
                    source: './animations/setFrequency.zip'
                    size_hint: 1, None
                    height: self.texture_size[1]
                    anim_delay: 1
                    mipmap: True
                    keep_data: True

                Label:
                    text: "fig 1.1 (waveform types)"
                    text_size: self.size
                    halign: "center"

                Label:
                    id: infoText_p3
                    text: ""
                    markup: True
                    size_hint: 0.98, None
                    text_size: self.width, None
                    height: self.texture_size[1]

                AsyncImage:
                    id: gif
                    source: './animations/setFreqMod.zip'
                    keep_ratio: True
                    size_hint: 1, None
                    height: self.texture_size[1]
                    anim_delay: 1
                    keep_data: True

                Label:
                    text: "fig 1.2 (frequency modulation)"
                    text_size: self.size
                    halign: "center"

                Label:
                    id: infoText_p4
                    text: ""
                    markup: True
                    size_hint: 0.98, None
                    text_size: self.width, None
                    height: self.texture_size[1]

                AsyncImage:
                    id: gif
                    source: './animations/secondModWave.zip'
                    keep_ratio: True
                    size_hint: 1, None
                    height: self.texture_size[1]
                    anim_delay: 1
                    keep_data: True

                Label:
                    text: "fig 1.3 (second modulating wave)"
                    text_size: self.size
                    halign: "center"

                BoxLayout:
                    id: marker

                Label:
                    id: infoText_p5
                    text: ""
                    markup: True
                    size_hint: 0.98, None
                    text_size: self.width, None
                    height: self.texture_size[1]
