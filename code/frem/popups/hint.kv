<Hint>:
    BoxLayout:
        orientation: 'vertical'
        pos: self.parent.pos
        size: self.parent.size

        Label:
            id: infoText
            text: "[b]Changes will be affected after restart![/b]"
            markup: True
            font_size: 40
            halign: 'center'
            valign: 'middle'
            text_size: self.width, None
            height: self.texture_size[1]

        BoxLayout:
            pos: self.parent.pos
            size_hint_y: None

            Button:
                text: "Exit"
                on_release: app.exit()

            Button:
                text: "Close"
                on_release: root.popupWindow.dismiss()