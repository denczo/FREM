<Warning>:
    padding: 10

    Image:
        source: 'logo/warning.png'
        size_hint: 0.2, 0.5
        pos_hint: {"x":0.4, "top":1}

    Label:
        id: infoText
        text: "[b]Please lower your volume before using this app! This app let you experiment with audio which can be loud and unpleasant in some cases![/b]"
        markup: True
#        font_size: 20
        halign: 'center'
        valign: 'middle'
        text_size: self.width, None
        height: self.texture_size[1]

    Button:
        text: "Close"
        size_hint: 0.2, 0.1
        pos: self.parent.pos

        #pos_hint: {"x":0.4, "y":0.0}
        on_release: root.popupWindow.dismiss()