<Warning>:
    BoxLayout:
        orientation: 'vertical'
        pos: self.parent.pos
        size: self.parent.size
        padding: 10

        Image:
            source: 'logo/warning.png'
            size_hint: 0.2, 0.5
            pos_hint: {"x":0.4, "top":1}

        Label:
            id: infoText
            text: "[b]Please lower your volume before using this app! This app let you experiment with audio which can be loud and unpleasant in some cases![/b]"
            markup: True
            font_size: 20
            halign: 'center'
            valign: 'middle'
            text_size: self.width, None
            height: self.texture_size[1]

        Button:
            text: "Ok"
            pos: self.parent.pos
            on_release: root.popupWindow.dismiss()
