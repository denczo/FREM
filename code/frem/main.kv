# Filename: main.kv
#:import utils kivy.utils
#:import threading threading
#:import builder kivy.lang.Builder
#:include popups/settings.kv
#:include popups/hint.kv
#:include popups/help.kv
#:include popups/info.kv
#:include popups/warning.kv

<Button>:
#    background_normal: ''
#    background_color: .5, .5, .5, 1

<ToggleButton>
    allow_no_selection: False
    font_size: self.width/4

<RotatedImage>:
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            axis: 0, 0, 1
            origin: root.center
    canvas.after:
        PopMatrix
        Color:
            rgba: (1,1,1,0)

<MainGrid>:
    canvas.before:
        Color:
#            rgb: utils.get_color_from_hex('#212946')
            rgb: utils.get_color_from_hex('#383838')
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        spacing: 10
        id: box
#        padding: 30
        orientation: 'vertical'
        size_hint: 1, 1

        #=======================================#
        #         LANDSCAPE ORIENTATION         #
        #=======================================#
        BoxLayout:

            id: graph
            orientation: 'horizontal'
            size_hint: 1, 0.1
            padding: 20, 20, 20, 0

            BoxLayout:
                orientation: 'vertical'
                id: info
                size_hint: 0.06, 1
                padding: 0,5,5,0

                Button:
                    text: '[b]?[/b]'
                    markup: True
                    size_hint_y: None
                    height: self.width
                    font_size: 0.75*self.height
                    on_release: root.show_help()

                BoxLayout:
                    size_hint: 1, 0.1

                Button:
                    size_hint_y: None
                    height: self.width
                    on_release: root.show_settings()
                    spacing: 10
                    padding: 50, 50

                    Image:
                        source: 'logo/settings.png'
                        pos: self.parent.pos
                        size: self.parent.size
                        keep_ratio: True
                        spacing: 100

                BoxLayout:
                    size_hint: 1, 0.1

                Button:
                    text: '[b]i[/b]'
                    markup: True
                    size_hint_y: None
                    height: self.width
                    font_size: 0.75*self.height
                    on_release: root.show_info()


#                RotatedImage:
#                    angle: 90
#                    source: 'logo/frem_logo_font.png'
#                    size_hint: 2, 2
#                    pos_hint: {"x":-0.5 , "y":0.0}
#                    opacity: 0.2


            # modulation signal
            ScrollView:
                id: view
                do_scroll_x: True
                do_scroll_y: False
                orientation: 'vertical'
                size_hint: 0.88, 1
                valign: 'middle'
                bar_width: 4
                bar_color: 1, 1, 1, 1
                bar_inactive_color: 1, 1, 1, 0.5
                scroll_type: ['content']

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: None, 1
                    width: view.width*root.zoom
                    padding: 0, 0, 5, 0
                    BoxLayout:
                        id: modulation
                        size_hint_x: 1
                        size_hint_y: 1


            BoxLayout:
                id: zoom
                orientation: 'vertical'
                size_hint: 0.06, 1
                padding: 5, 0, 0, 0
                valign: 'middle'

                Button:
                    text: '+'
                    size_hint_y: None
                    markup: True
                    height: self.width
                    font_size: 0.9*self.height

                    on_release: root.update_zoom(self.text)

                Label:
                    text: str(int(root.zoom)) + 'x'

                Button:
                    text: '-'
                    size_hint_y: None
                    height: self.width
                    font_size: 1*self.height

                    on_release: root.update_zoom(self.text)


        BoxLayout:
            id: panel
            size_hint: 1, 0.2
            padding: 20, 0, 20, 20
            spacing: 10
            #background_color: (0,0,0,0.2)
            canvas.before:
                Color:
#                    rgb: utils.get_color_from_hex('#202435')
                    rgb: utils.get_color_from_hex('#282828')
#                    rgb: .1, .1, .1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size


            #=======================================#
            #         TAB MOD WAVE 1 SIGNAL         #
            #=======================================#
            BoxLayout:
                id: wf_m1
                text: 'WF I \n(Modulation)'

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, 1


                    BoxLayout:
                        padding: 10
                        orientation: 'horizontal'
                        size_hint: 1, 0.2
                        valign: 'middle'

                        Label:
                            id: equ_wf_1
                            bold: True
                            text: str(root.mod_wave_1.equation)
                            color: '#08F7FE'
                            width: self.height
                            font_size: self.width/17

                    # waveform selection
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint: 1, 0.2

                        ToggleButton:
                            text: 'Sine'
                            group: 'wf_m1'
                            orientation: 'horizontal'
                            state: 'down'
                            # on_press: root.update_plot_multicore()
                            on_press: app.get_running_app().init_graph_process()
                            on_press: root.mod_wave_1.change_waveform('Sine')

                        ToggleButton:
                            text: 'Saw'
                            group: 'wf_m1'
                            orientation: 'horizontal'
                            # on_press: root.update_plot_multicore()
                            on_press: root.mod_wave_1.change_waveform('Sawtooth')

                        ToggleButton:
                            text: 'Triangle'
                            group: 'wf_m1'
                            orientation: 'horizontal'
                            # on_press: root.update_plot_multicore()
                            on_press: root.mod_wave_1.change_waveform('Triangle')

                        ToggleButton:
                            text: 'Square'
                            group: 'wf_m1'
                            orientation: 'horizontal'
                            # on_press: root.update_plot_multicore()
                            on_press: root.mod_wave_1.change_waveform('Square Wave')

                    # parameter modulation signal
                    BoxLayout:
                        size_hint: 1, 0.2

                        Label:
                            text: 'Show Graph'
                            text_size: self.size
                            font_size: self.width/9
                            valign: 'middle'
                            padding_x: 20

                        Switch:
                            id: mod_1_visible
                            active: True
                            on_active: root.mod_wave_1.graph_active = mod_1_visible.active
                            on_active: root.update_plot_multicore()

                    BoxLayout:
                        size_hint: 1, 0.2

                        Label:
                            text: 'Modulation'
                            text_size: self.size
                            font_size: self.width/9
                            valign: 'middle'
                            padding_x: 20

                        Switch:
                            id: m1_int_active
                            on_active: root.mod_wave_1.calculate_integral(m1_int_active.active)
                            on_active: root.update_plot_multicore()


                    BoxLayout:
                        size_hint: 1, 0.6
                        orientation: 'vertical'

                        Label:
                            text: 'Frequency: ' + str(m1_freq_mod.value) + ' hz'

                        Slider:
                            id: m1_freq_mod
                            min: 0.125
                            max: 2
                            padding: 30
                            value: 1
                            step: 0.125
                            on_value: root.mod_wave_1.change_frequency(m1_freq_mod.value)
                            on_value: root.update_plot_multicore()

                        Label:
                            text: 'Modulation Index: ' + str(round(float(m1_mod_index.value), 2))

                        Slider:
                            id: m1_mod_index
                            min: 0.01
                            max: 5.0
                            padding: 30
                            step: 0.01
                            disabled: not(m1_int_active.active)
                            on_value: root.mod_wave_1.change_mod_index(m1_mod_index.value)
                            on_value: root.update_plot_multicore()

            #=======================================#
            #         TAB MOD WAVE 2 SIGNAL         #
            #=======================================#
            BoxLayout:
                id: wf_m2
                text: 'WF II \n(Modulation)'

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, 1

                    BoxLayout:
                        padding: 10
                        orientation: 'horizontal'
                        size_hint: 1, 0.2
                        valign: 'middle'

                        Label:
                            id: equ_wf_2
                            bold: True
                            text: 'str(root.mod_wave_1.equation)'
                            color: '#FE53BB'
                            width: self.height
                            font_size: self.width/17

                    # waveform selection
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint: 1, 0.2

                        ToggleButton:
                            text: 'Sine'
                            group: 'wf_m2'
                            orientation: 'horizontal'
                            on_press: root.update_plot_multicore()
                            on_press: root.mod_wave_2.change_waveform('Sine')

                        ToggleButton:
                            text: 'Saw'
                            group: 'wf_m2'
                            orientation: 'horizontal'
                            on_press: root.update_plot_multicore()
                            on_press: root.mod_wave_2.change_waveform('Sawtooth')

                        ToggleButton:
                            text: 'Triangle'
                            group: 'wf_m2'
                            state: 'down'
                            orientation: 'horizontal'
                            on_press: root.update_plot_multicore()
                            on_press: root.mod_wave_2.change_waveform('Triangle')

                        ToggleButton:
                            text: 'Square'
                            group: 'wf_m2'
                            orientation: 'horizontal'
                            on_press: root.update_plot_multicore()
                            on_press: root.mod_wave_2.change_waveform('Square Wave')

                    # parameter modulation signal
                    BoxLayout:
                        size_hint: 1, 0.2

                        Label:
                            text: 'Show Graph'
                            text_size: self.size
                            font_size: self.width/9
                            valign: 'middle'
                            padding_x: 20

                        Switch:
                            id: m2_mod_visible
                            active: True
                            on_active: root.mod_wave_2.graph_active = m2_mod_visible.active
                            on_active: root.update_plot_multicore()

                    BoxLayout:
                        size_hint: 1, 0.2

                        Label:
                            text: 'Modulation'
                            text_size: self.size
                            font_size: self.width/9
                            valign: 'middle'
                            padding_x: 20

                        Switch:
                            id: m2_int_active
                            on_active: root.mod_wave_2.calculate_integral(m2_int_active.active)
                            on_active: root.update_plot_multicore()

                    BoxLayout:
                        size_hint: 1, 0.6
                        orientation: 'vertical'

                        Label:
                            text: 'Frequency: ' + str(m2_freq_mod.value) + ' hz'

                        Slider:
                            id: m2_freq_mod
                            min: 1
                            max: 20
                            padding: 30
                            value: 2
                            step: 0.5
                            on_value: root.mod_wave_2.change_frequency(m2_freq_mod.value)
                            on_value: root.update_plot_multicore()

                        Label:
                            text: 'Modulation Index: ' + str(int(m2_mod_index.value))

                        Slider:
                            id: m2_mod_index
                            min: 0.1
                            max: 100
                            padding: 30
                            step: 1
                            disabled: not(m2_int_active.active)
                            on_value: root.mod_wave_2.change_mod_index(m2_mod_index.value)
                            on_value: root.update_plot_multicore()

            #=======================================#
            #           TAB CARRIER SIGNAL          #
            #=======================================#
            BoxLayout:
                id: car
                text: 'WF III \n(Carrier)'

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, 1

                    BoxLayout:
                        padding: 10
                        orientation: 'horizontal'
                        size_hint: 1, 0.2
                        valign: 'middle'

                        Label:
                            id: equ_wf_3
                            bold: True
                            text: ''
                            color: '#00ff41'
                            width: self.height
                            font_size: self.width/17

                    # waveform selection
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint: 1, 0.2

                        ToggleButton:
                            text: 'Sine'
                            group: 'wf_carrier'
                            state: 'down'
                            orientation: 'horizontal'
                            on_press: root.update_plot_multicore()
                            on_press: root.carrier.change_waveform('Sine')

                        ToggleButton:
                            text: 'Saw'
                            group: 'wf_carrier'
                            orientation: 'horizontal'
                            on_press: root.update_plot_multicore()
                            on_press: root.carrier.change_waveform('Sawtooth')

                        ToggleButton:
                            text: 'Triangle'
                            group: 'wf_carrier'
                            orientation: 'horizontal'
                            on_press: root.update_plot_multicore()
                            on_press: root.carrier.change_waveform('Triangle')

                        ToggleButton:
                            text: 'Square'
                            group: 'wf_carrier'
                            orientation: 'horizontal'
                            on_press: root.update_plot_multicore()
                            on_press: root.carrier.change_waveform('Square Wave')

                    # parameter
                    BoxLayout:
                        size_hint: 1, 0.2

                        Label:
                            text: 'Show Graph'
                            font_size: self.width/9

                        Switch:
                            id: car_visible
                            on_active: root.carrier.graph_active = car_visible.active
                            on_active: root.update_plot_multicore()

                    BoxLayout:
                        size_hint: 1, 0.2

                    BoxLayout:
                        size_hint: 1, 0.3
                        orientation: 'vertical'

                        Label:
                            text: 'Frequency: ' + str(freq_car.value) + ' hz'

                        Slider:
                            id: freq_car
                            min: 0
                            max: 250
                            padding: 30
                            value: 4
                            disabled: not(car_visible.active)
                            step: 1
                            on_value: root.carrier.change_frequency(freq_car.value)
                            on_value: root.update_plot_multicore()

                    BoxLayout:
                        size_hint: 1, 0.1

                    ToggleButton:
                        size_hint: 1, 0.2
                        id: play
                        markup: True
                        font_size: self.width/15
                        text: '[b]PLAY[/b]'
                        orientation: 'horizontal'
                        # on_release: app.init_thread()
                        on_release: root.play_result()
